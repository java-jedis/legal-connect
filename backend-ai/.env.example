# Environment Configuration
NODE_ENV=development
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/legal_connect_db
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_DB=legal_connect_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Vector Database Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION_NAME=legal_documents

# Google AI Configuration
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
EMBEDDING_MODEL=models/embedding-001

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
APP_NAME=Legal Connect RAG
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=["pdf", "txt", "docx", "json"]

# Embeddings Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=8192

# RAG Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7
MAX_CONTEXT_LENGTH=4000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
